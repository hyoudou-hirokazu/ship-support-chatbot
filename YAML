steps:
  # Dockerイメージをビルド
  - name: 'gcr.io/cloud-builders/docker'
    args: ['build', '-t', 'gcr.io/$PROJECT_ID/ship-support-chatbot', '.'] # ★修正

  # ビルドしたイメージをContainer Registryにプッシュ
  - name: 'gcr.io/cloud-builders/docker'
    args: ['push', 'gcr.io/$PROJECT_ID/ship-support-chatbot'] # ★修正

  # Cloud Runにデプロイ
  - name: 'gcr.io/cloud-builders/gcloud'
    args:
      - 'run'
      - 'deploy'
      - 'ship-support-chatbot' # ★修正 (Cloud Run サービス名)
      - '--image'
      - 'gcr.io/$PROJECT_ID/ship-support-chatbot' # ★修正
      - '--region'
      - 'asia-northeast1'
      - '--platform'
      - 'managed'
      - '--allow-unauthenticated'
      # 環境変数はCloud Runサービスに設定済みのため、ここでは指定しない
options:
  logging: CLOUD_LOGGING_ONLY # ログをCloud Loggingのみに送信する
